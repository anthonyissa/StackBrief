# StackBrief Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# Connection URL for PostgreSQL database
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://user:password@localhost:5432/stackbrief

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# Bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=XXX

# Chat ID to send notifications to (user ID, group ID, or channel ID)
# To get your chat ID, message @userinfobot on Telegram
TELEGRAM_CHAT_ID=1XXX

# =============================================================================
# OPENAI
# =============================================================================
# API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxx

# Model to use for summarization (optional, default: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini
